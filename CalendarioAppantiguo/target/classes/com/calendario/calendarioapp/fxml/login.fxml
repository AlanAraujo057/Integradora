<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.calendario.Controllers.LoginController">

    <AnchorPane prefWidth="600" prefHeight="400">
        <VBox spacing="15" alignment="CENTER" AnchorPane.leftAnchor="100" AnchorPane.rightAnchor="100" AnchorPane.topAnchor="100" AnchorPane.bottomAnchor="100"
              styleClass="login-panel">

            <ImageView fitHeight="100" fitWidth="200">
                <image>
                    <Image url="@../images/logo.png" />
                </image>
            </ImageView>

            <TextField fx:id="usernameField" promptText="Usuario" />
            <PasswordField fx:id="passwordField" promptText="Contraseña" />

            <HBox spacing="10" alignment="CENTER">
                <Hyperlink text="Registrarse" />
                <Hyperlink text="¿Olvidaste tu contraseña?" />
            </HBox>

            <Button text="Entrar" onAction="#handleLogin" />
            <Label fx:id="statusLabel" style="-fx-text-fill: red;" />
        </VBox>
    </AnchorPane>

</StackPane>
